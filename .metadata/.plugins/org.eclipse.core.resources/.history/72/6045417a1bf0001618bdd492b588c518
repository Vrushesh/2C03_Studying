import java.util.Arrays;

public class BinarySearch {
	
	public static int indexOf(int[] a, int key){
		int lo = 0;
		int hi = a.length - 1;
		while (lo <= hi){
			int mid = lo + (hi - lo)/2; 
			if (key < a[mid]){
				hi =  mid - 1;
			}else if (key > a[mid]){
				lo = mid + 1;
			}else{ 
				return mid;
			}
		}
		return -1;
	}
	
	public static void main(String[] args){
		int[] a = {0,9,1,8,2,7,3,6,4,5};
		Arrays.sort(a);
		System.out.println(indexOf(a, 5));
	}
}
